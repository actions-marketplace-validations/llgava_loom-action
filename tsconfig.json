{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "moduleDetection": "force",
    "rootDir": ".",
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
